{
  "name": "build-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all copy html js css",
    "copy": "Xcopy /E /I /Y source\\_dist public",
    "html-compile": "html-includes --src source/ --dest public/",
    "html-minify": "html-minifier-terser --input-dir public/ --output-dir public/ --file-ext html --collapse-whitespace --remove-comments --minify-js true --minify-css true",
    "html": "npm-run-all html-*",
    "js-bundle": "esbuild source/js/custom.js --bundle --outfile=public/js/custom.js",
    "js-minify": "terser public/js/custom.js --compress --mangle --comments false --output public/js/custom.js",
    "js": "npm-run-all js-*",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 source/scss --output public/css/",
    "css-prefix": "postcss --replace public/css/*.css --use autoprefixer --map",
    "OFF-css-purge": "purgecss --keyframes --css public/css/*.css --content public/*.html public/js/*.js --output public/css/",
    "css-delmap": "rimraf public/css/*.map",
    "css": "npm-run-all css-*",
    "server": "serve public/ --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch-copy": "nodemon --watch source/_dist/ -e * -x npm run copy",
    "watch-html": "nodemon -e html --ignore public/ -x npm run html-compile",
    "watch-js": "nodemon -e js --ignore public/ -x npm run js-bundle",
    "watch-scss": "nodemon -e scss --ignore public/ -x npm run css-compile",
    "watch": "npm-run-all --parallel watch-*",
    "test": "npm-run-all build server"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "esbuild": "^0.14.39",
    "html-includes": "^4.4.1",
    "html-minifier-terser": "^7.0.0-alpha.2",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "purgecss": "^4.1.3",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2",
    "terser": "^5.13.1"
  },
  "dependencies": {}
}